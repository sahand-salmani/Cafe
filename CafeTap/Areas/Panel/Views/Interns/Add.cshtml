<div class="card">
    <div class="card-header header-elements-inline">
        <h5 class="card-title">Archive Types</h5>
        <div class="header-elements">
            <div class="list-icons">
                <a class="list-icons-item" data-action="collapse"></a>
                <a class="list-icons-item" data-action="reload"></a>
                <a class="list-icons-item" data-action="remove"></a>
            </div>
        </div>
    </div>

    <div class="card-body">
        <p class="mb-4">Adding Archive type to the website</p>
        <div class="text-danger" asp-validation-summary="All"></div>
        <form asp-action="Add" asp-controller="Interns" asp-area="Panel" method="post" enctype="multipart/form-data">
            <fieldset class="mb-3">
                <legend class="text-uppercase font-size-sm font-weight-bold">Archive type Details</legend>

                <div class="form-group row">
                    <label class="col-form-label col-lg-2">Full Name</label>
                    <div class="col-lg-3">
                        <input class="form-control" asp-for="Name">
                    </div>
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>

                <div class="form-group row">
                    <label class="col-form-label col-lg-2">Position</label>
                    <div class="col-lg-3">
                        <input class="form-control" asp-for="Position">
                    </div>
                </div>
                <span asp-validation-for="Position" class="text-danger"></span>

                <div class="form-group row">
                    <label class="col-form-label col-lg-2">Phone Number</label>
                    <div class="col-lg-3">
                        <input class="form-control" asp-for="PhoneNumber">
                    </div>
                </div>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>


                <div class="form-group row">
                    <label class="col-form-label col-lg-2">Address</label>
                    <div class="col-lg-3">
                        <input class="form-control" asp-for="Address">
                    </div>
                </div>
                <span asp-validation-for="Address" class="text-danger"></span>


                <div class="form-group row">
                    <label class="col-form-label col-lg-2">Email</label>
                    <div class="col-lg-3">
                        <input class="form-control" asp-for="Email">
                    </div>
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>

                <div class="form-group row">
                    <label class="col-form-label col-lg-2">Start Date</label>
                    <div class="col-lg-3">
                        <input type="text" asp-for="StartsAt" class="form-control pickadate-accessibility" placeholder="Try me&hellip;">
                    </div>
                </div>
                <span asp-validation-for="StartsAt" class="text-danger"></span>


                <div class="form-group row">
                    <label class="col-form-label col-lg-2">Finish Date</label>
                    <div class="col-lg-3">
                        <input type="text" asp-for="FinishedAt" class="form-control pickadate-accessibility" placeholder="Try me&hellip;">
                    </div>
                </div>
                <span asp-validation-for="FinishedAt" class="text-danger"></span>

                <div class="form-group row">
                    <label class="col-form-label col-lg-2">Is Approved</label>
                    <div class="col-lg-3">
                        <input type="checkbox" asp-for="IsApprovedForJob" class="form-check-input-styled-success" checked data-fouc>
                    </div>
                </div>
                <span asp-validation-for="IsApprovedForJob" class="text-danger"></span>



                <button type="submit" class="btn bg-blue ml-3">Add<i class="icon-paperplane ml-2"></i></button>
            </fieldset>
        </form>

    </div>
</div>
